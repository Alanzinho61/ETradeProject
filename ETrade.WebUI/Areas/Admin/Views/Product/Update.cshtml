@model Product
@{
    ViewData["Title"] = "Update";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Update</h1>

<form asp-action="Update" asp-controller="Product" method="post" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id" />


    <input type="text" name="ProductName" value="@Model.ProductName" placeholder="Kategori Adi" /> <br /> <br />
    <input type="text" name="ProductDescription" value="@Model.ProductDescription" placeholder="Kategori Aciklamasi" /> <br /> <br />
    <input type="text" name="ProductStock" value="@Model.ProductStock" placeholder="Kategori Adi" /> <br /> <br />
    <input type="text" name="ProductPrice" value="@Model.ProductPrice" placeholder="Kategori Aciklamasi" /> <br /> <br />
    <select class="form-select" aria-label="Default select example" name="CategoryId">
        <option selected>Open this select menu</option>

        @* itemid kullanimina bak *@

        @foreach (var item in ViewBag.Category)
        {
            if (item.Id == ViewBag.SelectedCategoryId)
            {
                <option value="@item.Id" selected>@item.CategoryName</option>
            }
            else
            {
                <option value="@item.Id">@item.CategoryName</option>
            }
        }
    </select>
    <td><img src="~/images/@Model.ImagePath" alt="Product Image" style="max-width: 50px; max-height: 50px;" /></td>
    <input type="file" name="image" />

    <input type="submit" value="Update" class="btn btn-success" />

</form>